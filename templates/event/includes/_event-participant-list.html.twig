<h2>Participants</h2>
<ul>
{% for participant in participants %}
    <li>
        {{ participant.user.firstName }} {{ participant.user.lastName }}
        {% if event.isIsFinancialParticipation %}
            {% if participant.isHasParticipated %}
                <span class="participant-status" aria-label="a participé">
                    <i class="fas fa-check" aria-hidden="true"></i>
                </span>
            {% else %}
                <span class="participant-status" aria-label="n'a pas participé">
                    <i class="fas fa-times" aria-hidden="true"></i>
                </span>
            {% endif %}  
        {% endif %}
    </li>
{% else %}
    <li>Aucun participant</li>
{% endfor %}
</ul>