<div class="event-form">
    {{ form_start(form) }}
    
    <div class="event-form-row">
        {{ form_label(form.title) }}
        {{ form_widget(form.title) }}
    </div>

    <div class="event-form-row">
        <label>{{ form.category.vars.label }}</label>
        
        <div id="category-button-group">
            {% for choice in form.category.vars.choices %}
                <button class="category-toggle-button toggle-button {{ form.category.vars.value == choice.value ? 'active' : '' }}" data-value="{{ choice.value }}">
                    {{ choice.label }}
                </button>
            {% endfor %}
        </div>

        {{ form_widget(form.category, {'attr': {'style': 'display:none;'}}) }} 
    </div>

    <div class="event-form-row">
        {{ form_label(form.place) }}
        {{ form_widget(form.place) }}
    </div>

    <div class="event-form-row">
        {{ form_label(form.startDate) }}
        {{ form_widget(form.startDate) }}
    </div>

    <div class="event-form-row">
        {{ form_label(form.endDate) }}
        {{ form_widget(form.endDate) }}
    </div>

    <div class="event-form-row">
        <label class="required">Cet événement est-il privé ?</label>   
        <button id="event_isPrivate_yes" class="toggle-button {{ form.isPrivate.vars.value == '1' ? 'active' : '' }}" data-value="1" type="button">Oui</button>
        <button id="event_isPrivate_no" class="toggle-button {{ form.isPrivate.vars.value == '0' ? 'active' : '' }}" data-value="0" type="button">Non</button>
        {{ form_widget(form.isPrivate) }} 
    </div>

    <div class="event-form-row">
        <label class="required">Y-a-t-il une participation financière ?</label>
        <button id="event_isFinancialParticipation_yes" class="toggle-button {{ form.isFinancialParticipation.vars.value == '1' ? 'active' : '' }}" data-value="1" type="button">Oui</button>
        <button id="event_isFinancialParticipation_no" class="toggle-button {{ form.isFinancialParticipation.vars.value == '0' ? 'active' : '' }}" data-value="0" type="button">Non</button>
        {{ form_widget(form.isFinancialParticipation) }} 
    </div>

    <div class="event-form-row" id="event_financialParticipationAmount">
        {{ form_label(form.financialParticipationAmount) }}
        {{ form_widget(form.financialParticipationAmount) }}
    </div>

    {{ form_widget(form.submit) }}

    {{ form_end(form) }}
</div>
